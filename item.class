final public class ItemObject{
    final private long id;
    final private string itemName;
    final private string description;
    final private int purchesCounter;

    ItemObject(long id, String itemName, string description, int purchesCounter) {
        this.id = id;
        this.itemName = itemName;
        this.description = description;
        this.purchesCounter = purchesCounter;
    }

    public long getId() {
        return id;
    }

    public String getItemName() {
        return itemName;
    }

    public String getItemDescription() {
        return description;
    }

    public int getItemPurchesCount() {
        return purchesCounter;
    }
}