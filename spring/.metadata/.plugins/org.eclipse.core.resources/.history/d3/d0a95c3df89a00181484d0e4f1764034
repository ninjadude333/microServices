package com.example.demo;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

@Controller
public class Items {
	
	public String[] itemsList = {"apple","bannan","cake","fuck off"};
	public String[] itemDetails = {"a fruit","a yellow fruit","pastry","curse word"};
	
	@RequestMapping("/items")
	public @ResponseBody String items(int index) {
		
		return itemsList[index];
	}
	
	@RequestMapping("/itemDetails")
	public @ResponseBody String itemDetails(int index) {
		
		return itemDetails[index];
	}
}
